{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "es2022",
        "moduleResolution": "node16",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "outDir": "./dist",
        "declaration": true,
        "isolatedModules": true,
        "removeComments": false,
        "rootDir": "./src",
        "types": ["node", "webdriverio", "@wdio/globals/types", "vitest/globals"]
    },
    "include": ["src/**/*"]
}
